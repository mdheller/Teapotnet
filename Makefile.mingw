CC=i486-mingw32-gcc
CXX=i486-mingw32-g++
RM=rm -f
CPPFLAGS=-O
LDFLAGS=-O
LDLIBS=-lpthread -lws2_32 -lsqlite3

SRCS=$(shell printf "%s " src/*.cpp)
OBJS=$(subst .cpp,.o,$(SRCS))

all: teapotnet.exe

teapotnet.exe: $(OBJS)
	$(CXX) $(LDFLAGS) -o teapotnet.exe $(OBJS) $(LDLIBS) 

depend: .depend

.depend: $(SRCS)
	$(CXX) $(CPPFLAGS) -MM $^ > ./.depend

clean:
	$(RM) $(OBJS)

dist-clean: clean
	$(RM) src/*~ ./.depend

include .depend

